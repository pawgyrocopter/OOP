@model SettingsModel

<!DOCTYPE html>

<form asp-action="ChooseFactory" asp-controller="Settings" asp-anti-forgery="true" method="post">
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="inputGroupSelect01">Options</label>
        </div>
        <select class="custom-select" id="inputGroupSelect01" asp-for="@Model.SelectedFactoryId">
            <option disabled>Choose...</option>
            @foreach (var i in Model.Factories)
            {
                <option value="@i.Id">@i.Name</option>
            }
        </select>
        
        <div class="form-group">
            <input type="submit" value="Choose Factory" class="btn"/>
        </div>
    </div>

</form>