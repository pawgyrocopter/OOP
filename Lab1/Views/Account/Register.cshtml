@model Lab1.Models.RegisterModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="All"></div>
    <div>
        <div>
            <label asp-for="Email">Email</label><br/>
            <input type="text" asp-for="Email"/>
            <span asp-validation-for="Email"/>
        </div>
        <div>
            <label asp-for="FirstName">Имя</label><br/>
            <input type="text" asp-for="FirstName"/>
            <span asp-validation-for="FirstName"/>
        </div>
        <div>
            <label asp-for="LastName">Фамилия</label><br/>
            <input type="text" asp-for="LastName"/>
            <span asp-validation-for="LastName"/>
        </div>
        <div>
            <label asp-for="LastName">Отчество</label><br/>
            <input type="text" asp-for="SecondName"/>
            <span asp-validation-for="LastName"/>
        </div>
        <div>
            <label asp-for="LastName">Серия и Номер паспорта</label><br/>
            <input type="text" asp-for="SeriesAndPassportNumber"/>
            <span asp-validation-for="LastName"/>
        </div>
        <div>
            <label asp-for="LastName">Идентификационный номер</label><br/>
            <input type="text" asp-for="IdentificationNumber"/>
            <span asp-validation-for="LastName"/>
        </div>
        
        <div>
            <label asp-for="LastName">Телефон</label><br/>
            <input asp-for="PhoneNumber"/>
            <span asp-validation-for="LastName"/>
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br/>
            <input asp-for="Password"/>
            <span asp-validation-for="Password"/>
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторите пароль</label><br/>
            <input asp-for="ConfirmPassword"/>
            <span asp-validation-for="ConfirmPassword"/>
        </div>
        <div>
            <input type="submit" value="Регистрация"/>
        </div>
    </div>
</form>